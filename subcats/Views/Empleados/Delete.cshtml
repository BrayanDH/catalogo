@model subcats.dto.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-times"></i> Eliminar Empleado
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4><i class="fas fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este empleado?</h4>
                        <p>Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-user"></i> Nombre
                                </label>
                                <p class="form-control-static">@Model.Nombre</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-user"></i> Apellido
                                </label>
                                <p class="form-control-static">@Model.Apellido</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <p class="form-control-static">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-phone"></i> Teléfono
                                </label>
                                <p class="form-control-static">@Model.Telefono</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-map-marker-alt"></i> Dirección
                        </label>
                        <p class="form-control-static">@Model.Direccion</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-calendar-alt"></i> Fecha de Ingreso
                                </label>
                                <p class="form-control-static">@Model.Fecha_Ingreso.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-money-bill-wave"></i> Salario
                                </label>
                                <p class="form-control-static">@Model.Salario.ToString("C")</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id_empleado" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 