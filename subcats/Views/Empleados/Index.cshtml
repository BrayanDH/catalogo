@model IEnumerable<subcats.dto.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-users"></i> Gestión de Empleados
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nuevo Empleado
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Email</th>
                                    <th>Teléfono</th>
                                    <th>Fecha Ingreso</th>
                                    <th>Salario</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id_empleado</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.Apellido</td>
                                        <td>@item.Email</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.Fecha_Ingreso.ToShortDateString()</td>
                                        <td>@item.Salario.ToString("C")</td>
                                        <td>
                                            @if (item.Estado)
                                            {
                                                <span class="badge badge-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactivo</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.Id_empleado" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id_empleado" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> Detalles
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id_empleado" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Eliminar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 