@model subcats.dto.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-circle"></i> Detalles del Empleado
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-user"></i> Nombre
                                </label>
                                <p class="form-control-static">@Model.Nombre</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-user"></i> Apellido
                                </label>
                                <p class="form-control-static">@Model.Apellido</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <p class="form-control-static">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-phone"></i> Teléfono
                                </label>
                                <p class="form-control-static">@Model.Telefono</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-map-marker-alt"></i> Dirección
                        </label>
                        <p class="form-control-static">@Model.Direccion</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-birthday-cake"></i> Fecha de Nacimiento
                                </label>
                                <p class="form-control-static">
                                    @(Model.Fecha_Nacimiento?.ToShortDateString() ?? "No especificada")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-calendar-alt"></i> Fecha de Ingreso
                                </label>
                                <p class="form-control-static">@Model.Fecha_Ingreso.ToShortDateString()</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-money-bill-wave"></i> Salario
                                </label>
                                <p class="form-control-static">@Model.Salario.ToString("C")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-toggle-on"></i> Estado
                                </label>
                                <p class="form-control-static">
                                    @if (Model.Estado)
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactivo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-clock"></i> Fecha de Creación
                                </label>
                                <p class="form-control-static">
                                    @(Model.Fecha_Creacion?.ToString("dd/MM/yyyy HH:mm") ?? "No especificada")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">
                                    <i class="fas fa-sync"></i> Última Actualización
                                </label>
                                <p class="form-control-static">
                                    @(Model.Fecha_Actualizacion?.ToString("dd/MM/yyyy HH:mm") ?? "No especificada")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model.Id_empleado" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 