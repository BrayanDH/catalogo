@model subcats.dto.Producto
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>Crear Nuevo Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Precio" class="form-label">Precio</label>
                                <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Costo" class="form-label">Costo</label>
                                <input asp-for="Costo" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Impuesto" class="form-label">Impuesto (%)</label>
                                <input asp-for="Impuesto" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Descuento" class="form-label">Descuento (%)</label>
                                <input asp-for="Descuento" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Stock" class="form-label">Stock</label>
                                <input asp-for="Stock" class="form-control" type="number" min="0" required />
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Volver al Catálogo</a>
                            <button type="submit" class="btn btn-primary">Guardar Producto</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>