@model subcats.dto.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>Eliminar Producto</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> ¿Está seguro de que desea eliminar este producto?
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h3 class="display-6">@Model.Nombre</h3>
                            <hr />
                        </div>
                    </div>
                    
                    @if (Model.Imagen != null && Model.Imagen.Length > 0)
                    {
                        <div class="row mb-4">
                            <div class="col-md-12 text-center">
                                <img src="@Url.Action("GetImage", "Productos", new { id = Model.Id_producto })" 
                                     style="max-width: 200px; max-height: 200px;" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Descripción:</div>
                        <div class="col-md-9">@Model.Descripcion</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Precio:</div>
                        <div class="col-md-9">L @Model.Precio.ToString("N2")</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Stock:</div>
                        <div class="col-md-9">@Model.Stock unidades</div>
                    </div>
                    
                    @if (Model.CategoriaId.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Categoría:</div>
                            <div class="col-md-9">@ViewBag.NombreCategoria</div>
                        </div>
                    }
                    
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id_producto" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar Definitivamente</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>