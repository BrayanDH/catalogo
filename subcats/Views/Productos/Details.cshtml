@model subcats.dto.Producto
@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4>Detalles del Producto</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h3 class="display-6">@Model.Nombre</h3>
                            <hr />
                        </div>
                    </div>
                    
                    @if (Model.Imagen != null && Model.Imagen.Length > 0)
                    {
                        <div class="row mb-4">
                            <div class="col-md-12 text-center">
                                <img src="@Url.Action("GetImage", "Productos", new { id = Model.Id_producto })" 
                                     style="max-width: 300px; max-height: 300px;" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Descripción:</div>
                        <div class="col-md-9">@Model.Descripcion</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Precio:</div>
                        <div class="col-md-9">L @Model.Precio.ToString("N2")</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Impuesto:</div>
                        <div class="col-md-9">@Model.Impuesto.ToString("N2")%</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Descuento:</div>
                        <div class="col-md-9">@(Model.Descuento.HasValue ? Model.Descuento.Value.ToString("N2") + "%" : "Sin descuento")</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Stock:</div>
                        <div class="col-md-9">@Model.Stock unidades</div>
                    </div>
                    
                    @if (Model.CategoriaId.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Categoría:</div>
                            <div class="col-md-9">@ViewBag.NombreCategoria</div>
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Fecha de creación:</div>
                        <div class="col-md-9">@(Model.Fecha_creacion.HasValue ? Model.Fecha_creacion.Value.ToString("dd/MM/yyyy HH:mm") : "-")</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Última actualización:</div>
                        <div class="col-md-9">@(Model.Fecha_actualizacion.HasValue ? Model.Fecha_actualizacion.Value.ToString("dd/MM/yyyy HH:mm") : "-")</div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Volver al Catálogo</a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id_producto" class="btn btn-primary me-2">Editar</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id_producto" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>